<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical"
  android:id="@+id/QuickReplyLinearLayout"
  android:layout_height="fill_parent">
  <TextView
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:id="@+id/QuickReplyTextView"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="fill_parent"
    android:text="@string/quickreply_from_text"
    android:lines="1"
    android:layout_marginRight="15sp"
    android:layout_marginLeft="10sp"
    android:singleLine="true"
    android:ellipsize="marquee" />
  <TextView
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:id="@+id/QuickReplyCounterTextView"
    android:gravity="right"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_width="fill_parent"
    android:text="@string/message_counter"
    android:lines="1"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp" />
  <LinearLayout
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4sp"
    android:layout_marginRight="4sp"
    android:layout_marginTop="3sp"
    android:layout_marginBottom="3sp"
    android:id="@+id/QuickReplyEntryLinearLayout">
    <EditText
      android:id="@+id/QuickReplyEditText"
      android:layout_height="wrap_content"
      android:maxLines="3"
      android:layout_toLeftOf="@+id/SpeakButton"
      android:layout_weight="1"
      android:layout_width="fill_parent" android:imeOptions="actionSend"/>
    <ImageButton
      android:layout_width="wrap_content"
      android:src="@android:drawable/ic_btn_speak_now"
      android:id="@+id/SpeechRecogButton"
      android:scaleType="center"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical" />
  </LinearLayout>
</LinearLayout>